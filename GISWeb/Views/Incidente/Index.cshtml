                            <i title="Lesões ou Doenças" class="ace-icon  fa fa-wheelchair bigger-230"></i>
                        </a>
                        <a class="" href='@Url.Action("Novo","Cat",new { id=iRegistro.RegistroID})'>
                            <i title="CAT" class="ace-icon fa fa-user-md bigger-230"></i>
                        </a>

            <div class="col-xs-12 col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.DataObito, htmlAttributes: new { @class = "form-field-select-3 col-xs-12 col-sm-12 no-padding-right" })
                    <div class="col-xs-12 col-sm-12">
                        @Html.EditorFor(model => model.DataObito, new { htmlAttributes = new { @class = "date-picker form-control" } })
                    </div>
                </div>
            </div>
        </div>

        @Html.HiddenFor(model => model.UKIncidente)
    }
</div>
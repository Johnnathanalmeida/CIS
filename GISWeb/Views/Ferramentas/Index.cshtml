@model List<string>

@{
    ViewBag.Title = "Ferramentas";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Tabelas Auxiliares
            <a href="#" onclick="ProcessarTodasAsSheets(); return false;" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Processar todas as Sheets
            </a>
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        @if (Model != null && Model.Count > 0)
        {
            <table id="tblSheets" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome da sheet</th>
                        <th>Itens encontrados</th>
                        <th>Itens criados</th>
                        <th>Status</th>
                        <th width="40px"></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (string item in Model)
                    {
                        <tr>
                            <td>@item</td>
                            <td>-</td>
                            <td>-</td>
                            <td>Não iniciado</td>
                            <td align="center">
                                <div class="action-buttons">
                                    <a class="green CustomTooltip" title="Iniciar processamento" href="#" onclick="ExibirMensagemDeAlerta('Em construção...')">
                                        <i class="ace-icon fa fa-play bigger-130"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <strong>
                    <i class="ace-icon fa fa-meh-o"></i>
                    Oops!
                </strong>

                Nenhuma sheet foi encontrado.
                <br>
            </div>
        }
    </div>
</div>

<div id="ContentAjax">

</div>      


@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")
    <script src="~/Scripts/Custom/Ferramentas/TabelasAuxiliares.js"></script>
}
